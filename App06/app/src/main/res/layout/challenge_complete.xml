<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/textFILLIT"
                style="@style/bannerLogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageBell"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_margin="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/alert_default" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCongrat"
                android:layout_width="280sp"
                android:layout_height="wrap_content"
                android:layout_margin="40sp"
                android:text="축하드려요\n사용자 님\n챌린지를 성공했어요!"
                android:gravity="left"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="300sp"
                android:layout_height="450sp"
                android:layout_margin="180sp"
                android:background="@drawable/border_square_black_1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:text="챌린지 제목"
                    android:gravity="center"
                    android:layout_margin="10sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="180sp"
                    android:layout_height="wrap_content"
                    android:text="챌린지 설명"
                    android:gravity="center"
                    android:layout_margin="20sp"
                    app:layout_constraintTop_toBottomOf="@id/textTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutDate"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_margin="120sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/border_square_black_1dp">

                    <TextView
                        android:id="@+id/textStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작일"
                        android:layout_margin="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/textEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="종료일"
                        android:layout_margin="20sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutReward"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_margin="20sp"
                    app:layout_constraintTop_toBottomOf="@id/layoutDate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/border_square_black_1dp">

                    <TextView
                        android:id="@+id/staticReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="챌린지 리워드"
                        android:layout_margin="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/textReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포인트"
                        android:layout_margin="20sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPointTotal"
                    android:layout_width="250sp"
                    android:layout_height="40sp"
                    android:layout_margin="20sp"
                    app:layout_constraintTop_toBottomOf="@id/layoutReward"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/border_square_black_1dp">

                    <TextView
                        android:id="@+id/staticPointTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="합계 포인트"
                        android:layout_margin="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
                        android:id="@+id/textPointTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포인트"
                        android:layout_margin="20sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/imageLine"
                    android:layout_width="250sp"
                    android:layout_height="2sp"
                    app:srcCompat="@drawable/border_square_black_edge_1dp"
                    android:layout_margin="20sp"
                    app:layout_constraintTop_toBottomOf="@id/layoutPointTotal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <TextView
                    android:id="@+id/textEncourage"
                    android:layout_width="250sp"
                    android:layout_height="wrap_content"
                    android:text="격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지
격려의 메세지"
                    android:layout_margin="40sp"
                    app:layout_constraintTop_toBottomOf="@id/imageLine"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>